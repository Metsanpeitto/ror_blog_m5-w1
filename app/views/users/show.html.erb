<div class="user-profile">
  <div class="card">
    <img src=<%=@user.photo %> alt="photo" class="photo">
    <div class="card-info">
      <h3 class="info-name" ><%= @user.name %> </h3>
      <h5 class="info-number-posts" > Number of posts: <%= @user.post_counter %> </h5>
    </div>
  </div>
  <div class="bio">
    <h5 class="bio-title"> Bio </h5>
    <p class="bio-text"><%= @user.bio %></p>
  </div>
  <% @my_posts.each do |post| %>
    <%= link_to ("/users/#{@user.id}/posts/#{post.id}"), id:post.id, class: 'card-link' do %>
      <div class="bio">
        <h5 class="bio-title"> Post #<%= post.title%> </h5>
        <p class="bio-text"><%= post.text %></p>
      </div>
    <% end %>
  <% end %>
  <%= link_to ("/users/#{@user.id}/posts/new") %>
  <%= link_to "All posts", user_posts_path(@user.id), class: "button is-link is-small" %>  <%= button_to "New post", { action: "new" }, class: "user-button-all", id: "btn-user-close" %>
</div>
