<div class="user-posts">
  <div class="card">
    <img src=<%=@user.photo %> alt="photo" class="photo">
    <div class="card-info">
      <h3 class="info-name" ><%= @user.name %> </h3>
      <h5 class="info-number-posts" > Number of posts: <%= @user.post_counter %> </h5>
    </div>
  </div>
  <% @post_data.each do |data| %>
    <div class="bio">
      <h5 class="bio-title"> Post #<%= data[0].title%> </h5>
      <p class="bio-text"><%= data[0].text %></p>
    </div>
    <div class="post-comments">
      <% data[1].each do |comment| %>
        <div class="post-comment">
          <h6 class="post_comment-text"><%= comment[0] %> : <%= comment[1].text%></h6>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= button_to "See all posts", { action: "all_posts" }, class: "user-button-all", id: "btn-user-close" %>
</div>
