<div class="user-posts">
  <div class="card">
    <img src=<%= @user.photo %> alt="photo" class="photo">
    <div class="card-info">
      <h3 class="info-name" ><%= @user.name %> </h3>
      <h5 class="info-number-posts" > Number of posts: <%= @user.post_counter %> </h5>
    </div>
  </div>
  <h5>Here is a list of posts for a given user</h5>
  <% @posts.each_with_index do |post,index| %>
    <%= link_to ("/users/#{@user.id}/posts/#{post.id}"), id:post.id, class: 'card-link' do %>
      <div class="bio">
        <h5 class="bio-title"> Post #<%= post.title%> </h5>
        <p class="bio-text"><%= post.text %></p>
        <h5 class="info-number-comments" > Number of comments: <%= post.comments_counter %> </h5>
        <h5 class="info-number-likes" > Number of likes: <%= post.likes_counter %> </h5>
        <% if can? :destroy, post %>
          <p><%= link_to "Delete",post, :method => :delete, :confirm => "Are you sure?" %></p>
        <% end %>
      </div>
      <div class="post-comments">
        <%= render partial: '/posts/form_comment', :locals => {:@post => post} %>
        <% post.comments.includes([:user]).each do |comment| %>
          <div class="post-comment">
            <h6 class="post_comment-text"><%= comment.user.name %> : <%= comment.text%></h6>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <%= link_to "All post", user_posts_path(@user.id), class: "button is-link is-small" %>  <%= button_to "New post", { action: "new" }, class: "user-button-all", id: "btn-user-close" %>
</div>
