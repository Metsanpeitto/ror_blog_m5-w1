<div class="posts">
  <div class="bio">
    <h5 class="bio-title"> Post #<%= @post[0].title%> </h5>
    <p class="bio-text"><%= @post[0].text %></p>
  </div>
  <div class="post-comments">
    <% @post[1].each do |comment| %>
      <div class="post-comment">
        <h6 class="post_comment-text"><%= comment[0] %> : <%= comment[1].text%></h6>
      </div>
    <% end %>
  </div>
</div>
